<div class="row justify-content-center align-items-center my-5">
	<div class="col-12 my-5">
		<div class="row justify-content-center align-items-center">
			<div class="col-11">
				<h2 class="s-title titles">Nueva Receta</h2>
			</div>
		</div>
		{{#if patients}}
		<div class="row justify-content-center align-items center">
			<div class="col-10">
				<form action="/prescription/getPatientInfo" method="GET">
					<div class="form-row">
						<div class="col-5">
							<label for="patient" class="texts">Paciente</label>
							<select class="custom-select" id="patient" name="patient" required>
								{{#each patients}}
								<option value="{{this._id}}">{{this.name}} {{this.paternalLastName}}</option>
								{{/each}}
							</select>
						</div>
					</div>
					<div class="form-row my-3">
						<div class="col-5 d-flex justify-content-start align-items-center">
							<button type="submit" class="btn btn-mpk texts text-white">Obtener información</button>
						</div>
					</div>
				</form>
			</div>
		</div>
		{{else}}
		<div class="row justify-content-center align-items-center">
			<div class="col-10">
				<form action="" method="POST">
					<div class="form-group">
						<label for="inputGroupSelect01" class="texts">Médico</label>
						<select class="custom-select" id="inputGroupSelect01" name="author" disabled>
							<option value="{{user._id}}">{{user.name}} {{user.paternalLastName}}</option>
						</select>
					</div>
					<div class="form-group">
						<label for="inputGroupSelect01" class="texts">Edad Paciente</label>
						<select class="custom-select" id="inputGroupSelect01" name="topic" required>
							<option value="{{patient}}">Baseball</option>
						</select>
					</div>
					<div class="form-group d-flex flex-column">
						<label for="imgPath" class="texts">Cover Image</label>
						<input type="text" class="form-control" name="imgPath" placeholder="Paste url image" required>
					</div>
					<div class="form-group d-flex flex-column">
						<label for="title" class="texts">Title</label>
						<input type="text" class="form-control" name="title" placeholder="Title" required>
					</div>
					<div class="form-group d-flex flex-column">
						<label for="preview" class="texts">Preview</label>
						<input type="text" class="form-control" name="preview" placeholder="Preview" required>
					</div>
					<textarea name="content">
					</textarea>
					<button type="submit" class="btn btn-light my-3">Submit</button>
				</form>
			</div>
		</div>
		{{/if}}
	</div>
</div>