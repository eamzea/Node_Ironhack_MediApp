
<div class="row justify-content-center align-items-center">
	<div class="col-10 my-5">
		<div class="row">
			<div class="col-2 d-flex justify-content-center align-items-start">
				<img class="rounded-circle" src="https://via.placeholder.com/100" alt="">
			</div>
			<div class="col-10">
				<form action="/profile/edit" method="POST">
					<div class="form-group">
						<label for="name" class="text-dark">Nombre</label>
						<input type="text" name='userName' class="form-control" name="name" aria-describedby="emailHelp"
							value="{{user.name}}" placeholder="{{user.name}}">
					</div>
					<div class="form-group">
						<label for="paternalLastName" class="text-dark">Apellido Paterno</label>
						<input type="text" name='userName' class="form-control" name="paternalLastName" aria-describedby="emailHelp"
							value="{{user.paternalLastName}}" placeholder="{{user.paternalLastName}}">
					</div>
					<div class="form-group">
						<label for="maternalLastName" class="text-dark">Apellido Materno</label>
						<input type="text" name='userName' class="form-control" name="maternalLastName" aria-describedby="emailHelp"
							value="{{user.maternalLastName}}" placeholder="{{user.maternalLastName}}">
					</div>
					<div class="form-group">
						<label for="email" class="text-dark">Email</label>
						<input type="email" name='userEmail' class="form-control" name="email" aria-describedby="emailHelp"
							value="{{user.email}}" placeholder="{{user.email}}">
					</div>
					<div class="form-group">
						<label for="contraseña" class="text-dark">Contraseña</label>
						<input type="password" name='contraseña' class="form-control mb-3"  placeholder="Contraseña">
						<input type="password" name='newPassword' class="form-control my-3"  placeholder="Nueva Contraseña">
						<input type="password" name='confirmPassword' class="form-control my-3" 
							placeholder="Confirmar Contraseña">
						{{#if messagePassword}}
						<div class="error-message">{{ messagePassword }}</div>
						{{/if}}
					</div>
					<button type="submit" class="btn btn-dark">Actualizar</button>
				</form>
			</div>
		</div>
	</div>
</div>