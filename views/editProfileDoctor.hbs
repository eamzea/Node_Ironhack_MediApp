
<div class="row justify-content-center align-items-center">
	<div class="col-10 my-5">
		<div class="row">
			<div class="col-md-2 col-12 d-flex justify-content-center align-items-start">
				<img class="rounded-circle profile-pic" src="https://via.placeholder.com/100" alt="">
			</div>
			<div class="col-md-10 col-12">
				<form action="/profile/doctor/edit" method="POST">
					<div class="form-group">
						<label for="name" class="text-dark texts font-weight-bold">Nombre</label>
						<input type="text" name='name' id="name" class="form-control" 
							value="{{user.name}}" placeholder="{{user.name}}">
					</div>
					<div class="form-group">
						<label for="paternalLastName" class="text-dark texts font-weight-bold">Apellido Paterno</label>
						<input type="text" name="paternalLastName" id="paternalLastName" class="form-control" 
							value="{{user.paternalLastName}}" placeholder="{{user.paternalLastName}}">
					</div>
					<div class="form-group">
						<label for="maternalLastName" class="text-dark texts font-weight-bold">Apellido Materno</label>
						<input type="text" name="maternalLastName" id="maternalLastName" class="form-control" 
							value="{{user.maternalLastName}}" placeholder="{{user.maternalLastName}}">
					</div>
					<div class="form-group">
						<label for="idCard" class="text-dark texts font-weight-bold">Cédula</label>
						<input type="number" name="idCard" id="idCard" class="form-control" 
							value="{{user.idCard}}" placeholder="{{user.idCard}}">
					</div>
					{{> doctorSpecialty}}
					<div class="form-group">
						<label for="location" class="text-dark texts font-weight-bold">Consultorio</label>
						<input type="text" name='location' id='location' class="form-control" 
							value="{{user.location}}" placeholder="{{user.location}}">
					</div>
					<div class="form-group">
						<label for="oldPassword" class="text-dark texts font-weight-bold">Contraseña</label>
						<input type="password" name='oldPassword' id='oldPassword' class="form-control mb-3"  placeholder="Contraseña">
						<input type="password" name='newPassword' id='newPassword' class="form-control my-3"  placeholder="Nueva Contraseña">
						<input type="password" name='confirmPassword' id='confirmPassword' class="form-control my-3" 
							placeholder="Confirmar Contraseña">
						{{#if messagePassword}}
						<div class="error-message">{{ messagePassword }}</div>
						{{/if}}
					</div>
					<button type="submit" class="btn btn-mpk texts text-white">Actualizar</button>
				</form>
			</div>
		</div>
	</div>
</div>